@{
}
<partial name="Bun" model="true" />
<partial name="Onions" />
@if (Model.Type != Sandwich.Types.Meatless) { 
    <partial name="Bacon" />
}
<partial name="Lettuce" />
<partial name="Tomato" />
@if (Model.Type == Sandwich.Types.Burger) {
    @for (int i = 0; i < Model.PattyCount; i++) {
        <partial name="CheeseBurger" />
    }
} else if (Model.Type == Sandwich.Types.Chicken) {
    <partial name="Chicken" />
} else {

}
<partial name="Bun" model="false" />